# Prevent direct access to source files
<Files "*.js">
  Order Deny,Allow
  Deny from all
</Files>

# Allow access through Passenger/Node.js only
PassengerEnabled on
PassengerAppRoot /home/username/public_html/api/milk-collection-api
PassengerAppType node
PassengerStartupFile server.js
PassengerNodejs /opt/alt/alt-nodejs14/root/usr/bin/node

# Set environment to production
SetEnv NODE_ENV production

# CORS Headers
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization"
